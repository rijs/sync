{
  "name": "rijs.sync",
  "version": "1.0.0",
  "main": "dist/server.js",
  "author": "Pedram Emrouznejad (https://github.com/pemrouz)",
  "repository": {
    "type": "git",
    "url": "git://github.com/rijs/sync.git"
  },
  "scripts": {
    "build": "npm run clean && npm run buble && npm run client && npm run server && npm run rollup && npm run minify && npm run gzip",
    "clean": "rm -rf dist && mkdir dist",
    "buble": "buble -i src -o dist",
    "client": "uglifyjs dist/index.js -b -d client=true > dist/client.js",
    "server": "uglifyjs dist/index.js -b -d client=false > dist/server.js",
    "minify": "uglifyjs dist/client.bundle.js -m -c keep_fargs=false > dist/client.min.js",
    "gzip": "gzip -c dist/client.min.js > dist/client.min.js.gz",
    "rollup": "rollup -c",
    "test-popper": "popper",
    "test": "tap dist/**/test.js",
    "coverage": "tap dist/**/test.js --cov --coverage-report=lcov",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags"
  },
  "browser": "dist/client.min.js",
  "license": "pemrouz.mit-license.org",
  "devDependencies": {
    "browserify": "*",
    "rijs": "*",
    "rijs.core": "*",
    "rijs.css": "*",
    "rijs.data": "*",
    "rijs.fn": "*",
    "rijs.serve": "*",
    "uglify-es": "*",
    "buble": "*",
    "tap": "*"
  },
  "dependencies": {
    "express": "^4.14.0",
    "utilise": "*",
    "uws": "^8.14.0"
  }
}
