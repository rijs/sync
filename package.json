{
  "name": "rijs.sync",
  "version": "0.0.0",
  "main": "dist",
  "author": "Pedram Emrouznejad (https://github.com/pemrouz)",
  "scripts": {
    "babel": "babel src -d dist",
    "bundle": "browserify dist/index.js -o dist/client.js",
    "minify": "uglifyjs dist/client.js -m -c drop_console,dead_code -d debug=false -o dist/client.min.js",
    "build": "npm run babel && npm run bundle && npm run minify",
    "test": "browserify test/client.js -o dist/test.js && start http://localhost:5000 && node test/server",
    "watch": "watch \"npm run build && npm test\" src/ test/"
  },
  "license": "pemrouz.mit-license.org",
  "devDependencies": {
    "babel": "^4.6.3",
    "browserify": "^9.0.3",
    "chai": "^2.3.0",
    "rijs.core": "git://github.com/rijs/core",
    "rijs.data": "git://github.com/rijs/data",
    "coveralls": "^2.11.2",
    "express": "^4.12.3",
    "istanbul": "^0.3.13",
    "mocha": "^2.2.4",
    "mocha-lcov-reporter": "0.0.2",
    "serve-static": "^1.9.2",
    "uglify-js": "^2.4.16"
  },
  "dependencies": {
    "jsondiffpatch": "^0.1.31",
    "socket.io": "^1.3.5",
    "socket.io-client": "^1.3.5",
    "utilise": "git://github.com/utilise/utilise"
  }
}
